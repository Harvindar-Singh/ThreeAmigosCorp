@model IEnumerable<Customer.Web.DTOs.ReviewDto>

@{
    ViewData["Title"] = "Reviews' List";
}

<h1>Reviews</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr bgcolor="#0d9ee0">
        
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr bgcolor="#7bd1db">
           
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.ReviewId}) |
                @Html.ActionLink("Details", "Details", new { id=item.ReviewId  }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ReviewId  })
            </td>
        </tr>
}
    </tbody>
</table>
